{% extends 'base.html.twig' %}

{% block body %}


    <div class="jumbotron">
        <h1>{{ event.nom_event }}</h1>
        <h2>{{ event.prix }}</h2>
        <h3>{{ event.date_debut_event }}</h3>
        <h3>{{ event.date_fin_event }}</h3>
        <a href="{{ path('participeById', {id_event: event.id_event}) }}">Participer a cet évenement</a><br>
        <a href="{{ path('downloadPDF', {id_event: event.id_event}) }}">Télécharger la liste des participants (PDF)</a>
        <a href="{{ path('downloadCSV', {id_event: event.id_event}) }}">Télécharger la liste des participants (CSV)</a>
    </div>

    {% if photo %}
        {% for key,photo in photo %}

            <img src="http://10.131.129.4:5000/static/{{ photo.url_photo }}" alt="">
            <a href="{{ path('signaleById', {id_photo: photo.id_photo}) }}">Signaler</a>
            <a href="{{ path('likeById', {id_photo: photo.id_photo}) }}">Liker</a>

          <a href="{{ path('photoById', {id_photo: photo.id_photo}) }}">Consulter</a>

        <p>Id photo {{ photo.id_photo }}
            <a href="{{ path('likeById', {id_photo: photo.id_photo}) }}">Like</a>
           {# <a href="{{ path('signalebyId', {id_photo: photo.id_photo}) }}">Signaler</a> #}
        </p>

        {% endfor %}

    {% else %}
        <h1>Cet évenement ne comporte pas de photo(s)</h1>
    {% endif %}

    {# Voici le formulaire pour ajouter une image sur l'evenement courant #}

    {{ form_start(formPhoto) }}
    {{ form_widget(formPhoto) }}
    <button>Ajouter</button>
    {{ form_end(formPhoto) }}

{% endblock %}