{% extends 'base.html.twig' %}

{% block body %}

    {% include 'bases/styles.html.twig' %}

    {% include 'bases/header.html.twig' %}

    <main class="container mt-3">
        <button onclick="createIdea()" class="btn btn-outline-primary float-right mt-2"><i class="fas fa-plus"></i> Ajouter une idée</button>
        <h1>Boîte à idées</h1>
        <hr>

        {% for idee in idees %}


            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel"><i class="far fa-lightbulb"></i> Idée publiée le {{ idee.date_creation_idee|date('d/m/Y') }} par <a href="#">{{ users[idee.id_user].prenom }}</a></h5>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-sm-12">
                                <h4>{{ idee.nom_idee }}</h4>
                                {{ idee.description_idee }}
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-sm-12">
                                {#<button type="button" class="btn btn-danger"><i class="fas fa-heart"></i></button>#}

                                {% if (likes[idee.id_event_idee]|length != 0) %}
                                    {% for like in likes[idee.id_event_idee] %}
                                        {% if (app.session.get("id_user") != like.id_user) %}
                                            <a href="{{ path('voteById', {id_event_idee: idee.id_event_idee}) }}"><i class="fas fa-heart"></i></a>
                                        {% endif %}
                                    {% endfor %}
                                {% else %}
                                    <a href="{{ path('voteById', {id_event_idee: idee.id_event_idee}) }}"><i class="fas fa-heart"></i></a>
                                {% endif %}

                                {% if (likes[idee.id_event_idee]|length <= 1) %}
                                    {{ likes[idee.id_event_idee]|length }} personne aime ceci.
                                {% else %}
                                    {{ likes[idee.id_event_idee]|length }} personnes aiment ceci.
                                {% endif %}
                                <button onclick="transformIdea()" class="btn btn-outline-primary float-right mt-2"><i class="fas fa-plus"></i> Créer un événement</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        {% endfor %}

    </main>

    <script type="text/javascript">
        function createIdea() {
            location.href = "http://localhost/exia_a2_symfony_project/public/ideas/add";
        }
        function transformIdea() {
            location.href = "http://localhost/exia_a2_symfony_project/public/home";
        }
    </script>

    {% include 'bases/footer.html.twig' %}

{% endblock %}