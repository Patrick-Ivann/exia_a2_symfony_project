{% extends 'base.html.twig' %}

{% block body %}

    {% include 'bases/styles.html.twig' %}

    {% include 'bases/header.html.twig' %}

    <main class="container mt-3">
        <h1>Ajouter un produit</h1>
        <hr>

        <div class="row">
            <div class="col-sm-3"></div>
            <div class="col-sm-6">

                {{ form_start(form) }}

                <div class="form-group">
                    <label>Nom du produit</label>
                    {{ form_widget(form.nom_produit, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group">
                    <label>Prix du produit</label>
                    {{ form_widget(form.prix_produit, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group">
                    {{ form_widget(form.photo_produit) }}
                </div>

                <div class="col-sm-12 text-center mb-1">
                    <button type="submit" class="btn btn-primary">Ajouter le produit</button>
                </div>
                {{ form_end(form) }}<br><br><br><br>
            </div>
        </div>
    </main>

    {% include 'bases/footer.html.twig' %}

{% endblock %}





