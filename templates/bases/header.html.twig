{% block header %}
    <nav class="navbar navbar-expand-lg navbar-dark navbar-lighter">
        <div class="collapse navbar-collapse container" id="navbarTogglerDemo00">
            <ul class="navbar-nav mr-auto mt-2 mt-lg-0"></ul>
            <div class="form-inline my-2 my-lg-0">
                {% if app.session.get("mail") == null %}
                    <button class="btn btn-light my-2 my-sm-0 mr-2" onclick="login()"><i class="fas fa-sign-in-alt"></i> Se connecter</button>
                    <button class="btn btn-light my-2 my-sm-0" onclick="register()"><i class="fas fa-user-plus"></i> S'inscrire</button>
                {% else %}
                    {% if notifs is defined %}
                        {% if (notifs|length > 0) %}
                            <button class="btn btn-light my-2 my-sm-0 mr-2" onclick="logout()"><i class="fas fa-sign-out-alt"></i> Se déconnecter</button>
                            <div class="dropdown">
                                <button class="btn btn-warning dropdown-toggle" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="fas fa-bell"></i> {{ app.session.get("prenom") }}
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
                                    {% for key, notif in notifs %}
                                        <button class="dropdown-item" type="button">Votre idée (#{{ notifs[key].id_event_idee }}) a été retenue par le BDE.</button
                                    {% endfor %}
                                </div>
                            </div>
                        {% else %}
                            <button class="btn btn-light my-2 my-sm-0 mr-2" onclick="logout()"><i class="fas fa-sign-out-alt"></i> Se déconnecter</button>
                            <button class="btn btn-light my-2 my-sm-0" type="submit"><i class="fas fa-bell"></i> {{ app.session.get("prenom") }}</button>
                        {% endif %}
                    {% else %}
                        <button class="btn btn-light my-2 my-sm-0 mr-2" onclick="logout()"><i class="fas fa-sign-out-alt"></i> Se déconnecter</button>
                        <button class="btn btn-light my-2 my-sm-0" type="submit"><i class="fas fa-bell"></i> {{ app.session.get("prenom") }}</button>
                    {% endif %}
                {% endif %}
            </div>
        </div>
    </nav>
    <div class="jumbotron mb-0">
        <div class="container">
            <img src="http://localhost/exia_a2_symfony_project/public/logo_moodle.png" alt="">
            <img class="ml-4" src="http://localhost/exia_a2_symfony_project/public/logobde.png" width="70" alt="">
        </div>
    </div>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="#">BDE</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
                <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" href="http://localhost/exia_a2_symfony_project/public/home">Accueil</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="http://localhost/exia_a2_symfony_project/public/events">Événements</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="http://localhost/exia_a2_symfony_project/public/ideas">Boîte à idées</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="http://localhost/exia_a2_symfony_project/public/boutique">Boutique</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div id="myModal" class="modal" role="dialog">
        <div class="modal-dialog ">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 style="align-content: center;" class="modal-title">Ce site utilise des cookies</h4>
                </div>
                <div class="modal-body">
                    <p>Ce site utilise des cookies pour son bon fonctionnement, si vous n'acceptez pas les cookies vous risquez d'alterer l'expérience de navigation et les options d'achats de la boutique.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-dismiss="modal" onclick="setCookie('cacceptation', 1, 30)">J'accepte les cookies</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal" onclick="setCookie('cacceptation', 0, 30)">Je n'accepte pas les cookies</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

<script>
    function logout() {
        location.href = "http://localhost/exia_a2_symfony_project/public/logout";
    }
    function login() {
        location.href = "http://localhost/exia_a2_symfony_project/public/login";
    }
    function register() {
        location.href = "http://localhost/exia_a2_symfony_project/public/register";
    }

    function setCookie(name, value, days) {
        var d = new Date();
        d.setTime(d.getTime() + (days*24*60*60*1000));
        var expires = "expires=" + d.toGMTString();
        document.cookie = name+"="+value+expires+"; path=/";
    }

    function getCookie(name) {
        var nameEQ = name + "=";
        var ca = document.cookie.split(';');
        for(var i = 0; i < ca.length; i++) {
            var c = ca[i];
            while (c.charAt(0) == ' ') {
                c = c.substring(1,c.length);
            }
            if (c.indexOf(nameEQ) == 0) {
                return c.substring(nameEQ.length,c.length);
            }
        }
        return null;
    }

    $(document).ready(function () {
        if(getCookie("cacceptation") == null) {
            $("#myModal").modal("show");
        }
    });
</script>